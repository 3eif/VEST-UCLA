generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model blogPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      String
  author    String
  authorRole String
  authorImage String
  coverImage String
  category String
  readTime String
}

model caseStudy {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      String
  author    String
  authorRole String
  authorImage String
  coverImage String
  category String
  readTime String
}
